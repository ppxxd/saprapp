<?xml version="1.0" encoding="UTF-8"?>

<?import krutskikh.elements.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="krutskikh.controller.Controller">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Файл">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#load" text="Открыть" />
                        <MenuItem mnemonicParsing="false" onAction="#save" text="Сохранить" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0" BorderPane.alignment="CENTER">
            <items>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
                    <children>
                        <ResizableCanvas fx:id="canvas" height="200.0" layoutX="189.0" layoutY="2.0" width="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                    </children>
                </AnchorPane>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
                    <children>
                        <TabPane layoutY="-18.0" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <tabs>
                                <Tab text="Стержни">
                                    <content>
                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                 <children>
                                    <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                       <children>
                                          <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="268.0" prefWidth="598.0" HBox.hgrow="ALWAYS">
                                             <content>
                                                <VBox fx:id="barHolder" alignment="TOP_CENTER" prefHeight="149.0" prefWidth="456.0" spacing="5.0" />
                                             </content>
                                          </ScrollPane>
                                          <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="150.0" prefWidth="90.0" spacing="10.0" HBox.hgrow="NEVER">
                                             <children>
                                                <Button mnemonicParsing="false" onAction="#addBar" text="Добавить" textAlignment="CENTER" />
                                                <Button mnemonicParsing="false" onAction="#clearConstruction" text="Очистить" textAlignment="CENTER" />
<!--                                                <Button mnemonicParsing="false" onAction="#doCalculation" text="Расчёт" textAlignment="CENTER" />-->
                                                 <Text text="Заделки"></Text>
                                                 <CheckBox fx:id="leftSupportBox" mnemonicParsing="false" onAction="#setLeftSupport" text="Слева" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER"></CheckBox>
                                                 <CheckBox fx:id="rightSupportBox" mnemonicParsing="false" onAction="#setRightSupport" text="Справа" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.valignment="CENTER"></CheckBox>
                                             </children>
                                          </VBox>
                                       </children>
                                    </HBox>
                                 </children></AnchorPane>
                                    </content>
                                </Tab>
                                <Tab text="Узлы">
                                    <content>
                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                            <children>
                                                <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="268.0" prefWidth="598.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" HBox.hgrow="ALWAYS">
                                                    <content>
                                                        <VBox fx:id="jointHolder" alignment="TOP_CENTER" prefHeight="149.0" prefWidth="456.0" spacing="5.0" />
                                                    </content>
                                                </ScrollPane>
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </Tab>
                                <Tab text="Расчёт">
                                    <content>
                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                            <children>
                                                <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                                    <children>
                                                        <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="268.0" prefWidth="598.0" HBox.hgrow="ALWAYS">
                                                            <content>
                                                                <VBox fx:id="calcHolder" alignment="TOP_CENTER" prefHeight="149.0" prefWidth="456.0" spacing="5.0" />
                                                                <TableView fx:id="resultsView" maxWidth="400">
                                                                    <columnResizePolicy>
                                                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                                                    </columnResizePolicy>
                                                                    <columns>
                                                                        <TableColumn editable="false" sortable="false" text="x" fx:id="xValue"/>
                                                                        <TableColumn fx:id="Nx" editable="false" sortable="false" text="Nx"/>
                                                                        <TableColumn fx:id="Ux" editable="false" sortable="false" text="Ux"/>
                                                                        <TableColumn fx:id="sigmaX" editable="flase" sortable="false" text="σx"/>
                                                                    </columns>
                                                                </TableView>
                                                            </content>
                                                        </ScrollPane>
                                                        <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="150.0" prefWidth="90.0" spacing="10.0" HBox.hgrow="NEVER">
                                                            <children>
<!--                                                                Если расчет в точке, то есть введена точка, то просто по старой кнопке считаем-->
                                                                <Button mnemonicParsing="false" onAction="#doCalculation" text="Расчёт" textAlignment="CENTER"/>
                                                                <Button mnemonicParsing="false" onAction="#saveCalculation" text="Сохранить" textAlignment="CENTER"/>
                                                                <Text text="Стержень"></Text>
                                                                <TextField fx:id="barIndexes"></TextField>
                                                                <Text text="Шаг"></Text>
                                                                <TextField fx:id="samplingStep"></TextField>
                                                                <Text text="Точка"></Text>
                                                                <TextField fx:id="x"></TextField>
                                                            </children>
                                                        </VBox>
                                                    </children>
                                                </HBox>
                                            </children></AnchorPane>
                                    </content>
                                </Tab>
                            </tabs>
                        </TabPane>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </center>
</BorderPane>
